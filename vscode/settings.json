{
    "files.exclude": {
        "**/.trunk/*actions/": true,
        "**/.trunk/*logs/": true,
        "**/.trunk/*notifications/": true,
        "**/.trunk/*out/": true,
        "**/.trunk/*plugins/": true
    },
    "files.watcherExclude": {
        "**/.trunk/*actions/": true,
        "**/.trunk/*logs/": true,
        "**/.trunk/*notifications/": true,
        "**/.trunk/*out/": true,
        "**/.trunk/*plugins/": true
    },
    "editor.defaultFormatter": "trunk.io",
    /***********************************************************************
     * UI theme                                                            *
     ***********************************************************************/
    "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#ff0000"
    },
    /***********************************************************************
     * bazel                                                               *
     ***********************************************************************/
    "bazel.executable": "/home/peterhutkins/glyd/scripts/bin/bazel",
    "bazel.commandLine.commandArgs": [
        "--compilation_mode=dbg",
        "--subcommands",
        "--verbose_failures"
    ],
    "bazel.enableCodeLens": true,
    /***********************************************************************
     * tmux                                                                *
     ***********************************************************************/
     "terminal.integrated.profiles.linux": {
        "tmux-shell": {
            "path": "tmux",
            "args": ["new-session", "-A", "-s", "vscode:${workspaceFolder}"],
        }
    },
    "terminal.integrated.defaultProfile.linux": "tmux-shell",
    "terminal.integrated.automationProfile.linux": {
        "path": "bash"
    },
    /***********************************************************************
     * Github Copilot                                                      *
     ***********************************************************************/
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.chat.generateTests.codeLens": true,
    "github.copilot.chat.editor.temporalContext.enabled": true,
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    }
}
